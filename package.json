{
  "name": "ddd-project",
  "version": "0.0.1",
  "description": "DDD Project using Typescript",
  "main": "./src/server.ts",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore . --ext .js,.ts --fix",
    "start:http:dev": "nodemon ./src/http.ts",
    "start:http:prod": "tsc && node ./build/http.js",
    "start:http:qa": "tsc && node ./build/http.js",
    "test": "jest --verbose",
    "test:e2e": "jest ./tests/e2e",
    "test:unit": "jest ./tests/unit",
    "coverage": "jest --coverage",
    "tsc": "tsc",
    "commit": "cz",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "keywords": [
    "ddd",
    "typescript",
    "design",
    "patterns",
    "express",
    "nestjs",
    "mongo",
    "postgresql"
  ],
  "author": "Alvarez Pacheco",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "awilix-express": "^7.0.0",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "mongodb": "^3.7.3",
    "pg": "^8.7.3",
    "redoc-express": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "tslog": "^3.3.4",
    "typeorm": "^0.3.7",
    "typescript": "^4.7.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@release-it/conventional-changelog": "^5.1.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "automatic-release": "^1.1.1",
    "commitizen": "^4.2.5",
    "eslint": "^8.23.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.0",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "standard-version": "^9.5.0",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1"
  },
  "lint-staged": {
    "*.(js|ts)": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alvarez-P/ddd-app.git"
  },
  "bugs": {
    "url": "https://github.com/Alvarez-P/ddd-app/issues"
  },
  "homepage": "https://github.com/Alvarez-P/ddd-app#readme",
  "directories": {
    "test": "tests"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
